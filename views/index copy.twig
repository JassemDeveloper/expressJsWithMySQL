{% extends './layouts/master.html' %}
{% block content %}
<div class='row '>
<div class='col-12 text-center'>
<h1> {{title}} Page #{{currentPage}}</h1>
</div>
</div>
{% if isEmpty !=true %}
<div class='row' id='data'>
{% for o in data %}
<div class='col-4'>
<a href='/info/{{o.id}}'>
<div class='card' >
<div class='row'>
<div class='col-6'>
<img class='profile-img' src='img/profile.png'>
</div>
<div class='col-6'>
<b> Name: </b><br/>
{{o.name}}<br/>
<b> age: </b><br/>
{{o.age}}<br/>
<b> Hire Date: </b><br/>
{{o.hire_date}}
</div>
</div>
</div>
</a>
</div>
{% endfor %}
</div>
{% else %}
<div class='row '>
<div class='col-12 text-center'>
<h4> {{msg}} </h5>
</div>
</div>
{% endif %}

<div class='row'>
<div id='pagination'>
</div>
</div>


{% endblock %}

